<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line_solid">

        <FrameLayout

            android:id="@+id/back1"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ihomeo_logo" />
        </FrameLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/mobile_txv_appointments_dialog"
            style="@style/CustomTextview"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="Consultation Type      "
            android:textColor="#444444" />

        <EditText
            android:id="@+id/consultationType"
            style="@style/DialogEdittext"
            android:layout_alignBaseline="@id/mobile_txv_appointments_dialog"
            android:layout_alignParentRight="@id/mobile_txv_appointments_dialog"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/mobile_txv_appointments_dialog"
            android:hint="Enter Consultation Type" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name_txv_appointments_dialog"
            style="@style/CustomTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/mobile_txv_appointments_dialog"
            android:layout_below="@id/mobile_txv_appointments_dialog"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="Consultation Amount"
            android:textColor="#444444" />

        <EditText
            android:id="@+id/consultationAmount1"
            style="@style/DialogEdittext"
            android:layout_alignBaseline="@+id/name_txv_appointments_dialog"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/name_txv_appointments_dialog"
            android:hint="Enter Consultation Amount"
            android:inputType="number" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/back"
            style="@style/DialogDownButtons2"
            android:layout_toLeftOf="@+id/view_divider"
            android:text="@string/back" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/confirm"
            style="@style/DialogDownButtons"
            android:layout_toRightOf="@+id/view_divider"
            android:text="@string/confirm" />
    </LinearLayout>


</LinearLayout>