<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    -

    <RelativeLayout
        android:id="@+id/sai"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/doctorname_txv_header_tdayAppointments"
            style="@style/TopMainHeader"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Doctor" />
    </RelativeLayout>
    -

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:id="@+id/prev_date_tdayAppointments"
            style="@style/previous_next_arrows"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/previous_arrow" />

        <TextView
            android:id="@+id/currentdate_tdayApointments"
            style="@style/DateHeader_text"
            android:layout_centerInParent="true"
            android:text="calender" />

        <ImageView
            android:id="@+id/next_date_tdayAppointments"
            style="@style/previous_next_arrows"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/next_arrow" />
    </RelativeLayout>
    -

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/patient_header_tdayApointments"
            style="@style/SubMainHeader"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:text="@string/patient"
            android:textColor="@color/gray" />
        - <!--   <TextView
             android:id="@+id/time_header"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
             android:gravity="center"
             android:padding="5dp"
             android:text="@string/time"
             android:textColor="@color/white"
             android:textSize="@dimen/time_id_visit_header"
             android:textStyle="bold" />       
  -->
        <TextView
            android:id="@+id/time_header_tdayApointments"
            style="@style/SubMainHeader"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/time" />
    </RelativeLayout>
    -

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boxborder_graywhite_background"
            android:padding="1dp">

            <ListView
                android:id="@+id/appointmentslistview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:divider="@color/lightgray"
                android:dividerHeight="1dp" />
        </LinearLayout>
        -

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7">


            <Button
                android:id="@+id/close_appointments"
                style="@style/CustomDownButtons_1"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="@string/close" />

            <ImageView
                android:id="@+id/refresh_img_tdayAppointments"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/down_button_height"
                android:layout_alignBottom="@+id/close_appointments"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/close_appointments"
                android:layout_margin="5dp"
                android:src="@drawable/refresh" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>